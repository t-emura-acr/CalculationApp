<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical" >


    <Space
        android:layout_width="match_parent"
        android:layout_height="210dp" />

    <TextView
        android:id="@+id/textView_result"
        android:layout_width="300dp"
        android:layout_height="112dp"
        android:layout_gravity="center"
        android:gravity="right|bottom"
        android:text="0"
        android:textSize="50dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            android:layout_width="@dimen/btn_size"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="@dimen/btn_size"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="@dimen/btn_size"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnWaru"
            android:layout_width="@dimen/btn_size"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="รท" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/btn4"
            android:layout_width="@dimen/btn_size"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="@dimen/btn_size"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="@dimen/btn_size"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnKakeru"
            android:layout_width="@dimen/btn_size"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/btn1"
            android:layout_width="@dimen/btn_size"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="@dimen/btn_size"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="@dimen/btn_size"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnMainasu"
            android:layout_width="@dimen/btn_size"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/btn0"
            android:layout_width="@dimen/btn_size"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnC"
            android:layout_width="@dimen/btn_size"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnIkore"
            android:layout_width="@dimen/btn_size"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="=" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnPurasu"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>